<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/main_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/main_main_title"
            android:textSize="24sp" android:textFontWeight="800"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/main_welcome_title"
            android:layout_marginTop="49dp" android:layout_marginStart="9dp"
            android:layout_marginBottom="194dp" app:layout_constraintBottom_toTopOf="@+id/imageView_pro"/>
    <TextView
            android:text="@string/main_welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/main_welcome_title"
            android:layout_marginTop="101dp"
            android:layout_marginBottom="122dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView_fm" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="112dp"
            android:layout_height="105dp" app:srcCompat="@drawable/cal" android:id="@+id/imageView_calc"
            android:contentDescription="@string/imageview_content_description"
            app:layout_constraintTop_toBottomOf="@+id/main_main_title"
            app:layout_constraintEnd_toStartOf="@+id/imageView_pro" android:layout_marginBottom="358dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="39dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="9dp" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/pro" android:id="@+id/imageView_pro"
            app:layout_constraintTop_toBottomOf="@+id/main_main_title"
            app:layout_constraintStart_toEndOf="@+id/imageView_calc" app:layout_constraintEnd_toStartOf="@+id/imageView_fm"
            android:layout_marginBottom="358dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp" android:contentDescription="@string/imageview_content_description"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/fm" android:id="@+id/imageView_fm"
            android:contentDescription="@string/imageview_content_description"
            app:layout_constraintTop_toBottomOf="@+id/main_welcome_title"
            app:layout_constraintStart_toEndOf="@+id/imageView_pro" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="365dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="19dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>